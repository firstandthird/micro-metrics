#!/bin/bash

NAME=micrometrics_app_1
CMD=$1

if [[ -z "$CMD" ]]; then
  npm install &&
  npm prune &&
  docker-compose build &&
  docker-compose up
  exit
fi

if [[ "$CMD" == "shell" ]]; then
  docker-compose run --rm app sh
  exit
fi

if [[ "$CMD" == "enter" ]]; then
  docker exec -it $NAME sh
  exit
fi

if [[ "$CMD" == "npmi" ]]; then
  docker exec -it $NAME npm prune
  docker exec -it $NAME npm install
  touch conf/default.yaml
  exit
fi

if [[ "$CMD" == "lint" ]]; then
  docker-compose run --rm app npm run lint
  exit
fi

if [[ "$CMD" == "test" ]]; then
  docker exec -it $NAME npm test
  exit
fi

if [[ "$CMD" == "build" ]]; then
  docker-compose build
  exit
fi

if [[ "$CMD" == "mongo" ]]; then
  docker run -it --link micrometrics_db_1:mongo --rm mongo sh -c 'exec mongo "$MONGO_PORT_27017_TCP_ADDR:$MONGO_PORT_27017_TCP_PORT/test"'
  exit
fi


docker-compose $@
