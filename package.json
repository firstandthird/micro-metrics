{
  "name": "micro-metrics",
  "version": "0.7.0",
  "description": "micro email api",
  "scripts": {
    "start": "rapptor",
    "dev:server": "nodemon ./node_modules/.bin/rapptor",
    "clientkit": "clientkit --env dev",
    "dev": "concurrently -r 'npm run dev:server' 'npm run clientkit'",
    "lint": "eslint .",
    "test": "PORT=8099 lab -e test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/firstandthird/micro-metrics.git"
  },
  "keywords": [
    "email",
    "mail",
    "hapi",
    "micro",
    "microservice"
  ],
  "author": "First+Third",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/firstandthird/micro-metrics/issues"
  },
  "homepage": "https://github.com/firstandthird/micro-metrics#readme",
  "dependencies": {
    "hapi-mongodb": "6.2.0",
    "joi": "10.1.0",
    "lodash": "4.17.2",
    "rapptor": "1.3.2"
  },
  "devDependencies": {
    "code": "4.0.0",
    "concurrently": "^3.1.0",
    "eslint": "3.12.2",
    "eslint-config-firstandthird": "3.1.0",
    "eslint-plugin-import": "2.2.0",
    "lab": "11.2.1",
    "pre-commit": "1.1.3"
  },
  "eslintConfig": {
    "extends": "firstandthird"
  }
